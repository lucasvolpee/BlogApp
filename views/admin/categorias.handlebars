<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/adicionar"><button class="btn btn-success">Adicionar categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <div>
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
            </div>
            <div>
                <form action="/admin/categorias/delet" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger mt-3" type="submit">Deletar</button>
                </form>
            </div>        
        </div>
    </div>
{{else}}


{{/each}}