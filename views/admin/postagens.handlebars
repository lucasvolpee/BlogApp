<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/adicionar"><button class="btn btn-success">Adicionar nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <small>Data de criação: {{data}}</small>
            
            <div class="mt-2" style="display: flex; align-itens: center">
                <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
            
            
                <form action="/admin/postagens/delet" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger ml-2">Deletar postagem</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <p class="mt-3">Nenhuma postagem criada ainda</p>
{{/each}}